<div class="container-fluid text-center">
    <div class="row align-items-start">
        <div class="col justify-content-center align-items-center" style="height: 65vh;">
            <div class="card w-45">
                <div class="card-header bg-primary text-light">

                    Sign Up!
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">
                     <!-- Input field for email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                        </div>
                        <!-- Input field for username -->
                        <div class="mb-3">
                            <label for="username-signup" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username-signup" name="username" aria-describedby="usernameHelp">
                        </div>
                        <!-- Input field for password -->
                        <div class="mb-3">
                            <label for="password-signup" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password-signup" name="password">
                        </div>
                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary" id="submit-signup">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
