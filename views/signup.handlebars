<div class="container-fluid text-center">
    <div class="row align-items-start">
        <div class="col justify-content-center align-items-center" style="height: 65vh;">
            <div class="card w-45">
                <div class="card-header bg-primary text-light">

                    Sign Up!
                </div>
                <div class="card-body">
                    <form class="form signup-form">
                     <!-- Input field for email -->
                        <div class="form-group">
                            <label for="email-signup">Email</label>
                            <input class="form-input" type="text" id="email-signup" />
                        </div>
                        <!-- Input field for username -->
                        <div class="form-group">
                            <label for="username-signup">Username</label>
                            <input class="form-input" type="text" id="username-signup" />
                        </div>
                        <!-- Input field for password -->
                        <div class="form-group">
                            <label for="password-signup">Password</label>
                            <input class="form-input" type="password" id="password-signup" />
                        </div class="form-group">
                        <!-- Submit button -->
                        <button class="btn btn-primary" >Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>
