

<div class="container-fluid text-center">
    <div class="row align-items-start">
        <div class="col justify-content-center align-items-center">
            <div class="card w-45">
                <div class="card-header bg-primary">
                    Login Here!
                </div>
                <div class="card-body">
                    <form class = "form login-form">
                        <!-- Input field for username -->
                        <div class="form-group">
                            <label for="usernameInput1">Username</label>
                            <!-- Dynamic value for username -->
                            <input class="form-input" type="text" id="username-login">
                        </div>
                        <!-- Input field for password -->
                        <div class="form-group">
                            <label for="passwordInput1">Password</label>
                            <!-- Dynamic value for password -->
                            <input class="form-input" class="form-control" id="password-login">
                        </div>
                        <div class="form-group">
                         <!-- Submit button -->
                        <button class="btn btn-primary" type="submit">Login</button>
                        </div>
                    </form>
                    <!-- Sign-up link -->
                    <p>Don't have an account? <a href="/signup">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
  <script src="/js/loginSignup.js"></script> 